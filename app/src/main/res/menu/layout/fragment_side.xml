<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff5c5d">

        <LinearLayout
            android:id="@+id/side_locate_lat"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            app:layout_scrollFlags="scroll|enterAlways"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="bottom"
                android:src="@mipmap/ic_locate" />

            <TextView
                android:textSize="@dimen/main_text_14"
                android:id="@+id/side_tv_locate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:text="暂时无法定位"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="18dp"
                android:src="@mipmap/main_location_more" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ff5c5d"
            android:paddingBottom="7dp"
            android:paddingLeft="20dp"
            android:paddingTop="7dp">

            <LinearLayout
                android:id="@+id/et_search"
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/side_search_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/im_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/shop_search" />

                <com.ascba.rebate.view.EditTextWithCustomHint
                    android:id="@+id/side_et_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/im_search"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:hint="请输入您要搜索的商家名称"
                    android:textColorHint="@color/textgray"
                    android:textSize="12sp"
                    app:hintSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/et_search"
                android:gravity="right|center_vertical"
                android:paddingRight="20dp"
                android:text="搜索"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_14" />
        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            android:background="@color/main_content_bg"
            android:id="@+id/bus_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.v4.widget.SwipeRefreshLayout>
</android.support.design.widget.CoordinatorLayout>
