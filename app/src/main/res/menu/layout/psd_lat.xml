<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/main_content_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="350dp">
    <ImageView
        android:id="@+id/im_cancel"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:src="@mipmap/pay_close" />
    <com.ascba.rebate.view.keyboard.PasswordInputView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:cursorVisible="false"
        android:inputType="number"
        android:maxLength="6"
        app:pivPasswordLength="6"
        android:id="@+id/trader_pwd_set_pwd_edittext"
        android:layout_width="match_parent"
        android:layout_height="41dip"
        android:layout_below="@+id/im_cancel"
        android:background="@color/white" />

    <TextView
        android:onClick="forgetPassword"
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:text="忘记密码?"
        android:layout_below="@id/trader_pwd_set_pwd_edittext"
        android:id="@+id/tv_forget"
        android:textSize="@dimen/main_text_13"
        android:textColor="@color/main_text_blue"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <android.inputmethodservice.KeyboardView
        android:background="@color/main_content_bg"
        android:shadowColor="@color/main_text_normal"
        android:shadowRadius="0.0"
        android:keyTextColor="@color/main_text_normal"
        android:keyBackground="@drawable/key_bg"
        android:id="@+id/keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="240dip"
        android:layout_alignParentBottom="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="invisible"/>
</RelativeLayout>