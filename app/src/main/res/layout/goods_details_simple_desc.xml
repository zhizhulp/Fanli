<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="14dp">

        <ImageView
            android:visibility="gone"
            android:id="@+id/goods_details_simple_desc_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:src="@mipmap/goods_share" />
        <TextView
            android:visibility="gone"
            android:layout_marginTop="1dp"
            android:id="@+id/tv_teihui"
            android:background="@drawable/red_bg"
            android:textSize="@dimen/main_text_13"
            android:textColor="@color/shop_red_text_color"
            android:text="特惠"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:id="@+id/goods_details_simple_desc_type_goods1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_teihui"
            android:textColor="@color/shop_normal_text_color"
            android:layout_marginRight="12dp"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/goods_details_simple_desc_price_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goods_details_simple_desc_type_goods1"
            android:layout_marginTop="18dp"
            android:textColor="@color/shop_red_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/goods_details_simple_desc_price_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goods_details_simple_desc_type_goods1"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@id/goods_details_simple_desc_price_now"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>