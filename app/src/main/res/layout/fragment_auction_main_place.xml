<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ascba.rebate.view.ShopABar
        android:id="@+id/shopBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:abar_title="主会场"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:tabBackground="@drawable/tab_background"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/fragment_money_red"
        app:tabIndicatorHeight="0dp"
        app:tabMinWidth="98dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/white"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/white" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--交保证金-->
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:layout_gravity="bottom">

            <include layout="@layout/goods_details_cuttingline" />

            <!--交保证金-->
            <TextView
                android:id="@+id/btn_pay_deposit"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#E40016"
                android:gravity="center"
                android:text="交保证金"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="88dp"
                android:layout_toLeftOf="@id/btn_pay_deposit"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保证金:"
                        android:textColor="@color/shop_normal_text_color"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥368.00"
                        android:textColor="@color/fragment_money_red"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(未拍到全额退还保证金)"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>

        <!--悬浮按钮-->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/btn_cart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="11dp"
            android:background="@drawable/float_bg">

            <ImageView
                android:id="@+id/view_msg_im"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/gouwuche" />

            <TextView
                android:id="@+id/view_msg_indicator"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignTop="@id/view_msg_im"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="-3dp"
                android:layout_toRightOf="@id/view_msg_im"
                android:background="@drawable/notify_text2"
                android:gravity="center"
                android:text="5"
                android:maxLength="2"
                android:maxEms="2"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </RelativeLayout>

    </FrameLayout>
</LinearLayout>