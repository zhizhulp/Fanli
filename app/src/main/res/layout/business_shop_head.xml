<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/shop_img"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/shop_rl"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@id/shop_img"
        android:layout_marginLeft="84dp">

        <TextView
            android:id="@+id/shop_text_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/icon_collection"
            android:text="收藏"
            android:textSize="12sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/shop_text_collection"
            android:background="@color/lighter_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RCC韩国代购-男装"
                android:textColor="@color/shop_normal_text_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:drawableLeft="@mipmap/shop_personal"
                android:drawablePadding="5dp"
                android:text="个人店铺"
                android:textColor="@color/shop_normal_text_color"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/shop_img_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/shop_rl"
        android:layout_marginLeft="14dp"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_height="10dp"
        android:layout_below="@id/shop_rl"
        android:background="@color/lighter_gray" />

    <LinearLayout
        android:id="@+id/shop_ll"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/view"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="默认"
            android:textColor="@color/shop_normal_text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@color/lighter_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="销量"
            android:textColor="@color/shop_normal_text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@color/lighter_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="价格"
            android:textColor="@color/shop_normal_text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@color/lighter_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="最新"
            android:textColor="@color/shop_normal_text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/shop_ll"
        android:background="@color/lighter_gray" />

</RelativeLayout>