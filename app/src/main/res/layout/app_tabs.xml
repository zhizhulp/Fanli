<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tabs_zero_par"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_tabs_zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tab_main_select" />

            <TextView
                android:id="@+id/tv_tabs_zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="首页"
                android:textColor="@color/moneyBarColor"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabs_one_par"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_tabs_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tab_zhoubian" />

            <TextView
                android:id="@+id/tv_tabs_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="周边"
                android:textColor="@color/textgray"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:textColor="@color/textgray"
            android:id="@+id/tv_tabs_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="3dp"
            android:text="商城"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/tabs_three_par"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_tabs_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tab_caifu" />
            <TextView
                android:id="@+id/tv_tabs_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="财富"
                android:textColor="@color/textgray"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabs_four_par"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/im_tabs_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tab_me" />
            <TextView
                android:id="@+id/tv_tabs_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="我"
                android:textColor="@color/textgray"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginBottom="48dp"
        style="@style/viewStyleMatch"/>
</RelativeLayout>