<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/activity_pc_item1_img_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:src="@mipmap/pc_wodedingdan" />


    <TextView
        android:id="@+id/activity_pc_item1_text_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="11.5dp"
        android:layout_marginBottom="11.5dp"
        android:layout_toRightOf="@id/activity_pc_item1_img_left"
        android:text="我的订单"
        android:textColor="@color/shop_normal_text_color"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/activity_pc_item1_img_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14.5dp"
        android:src="@mipmap/pc_qianjin" />

    <TextView
        android:id="@+id/activity_pc_item1_text_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/activity_pc_item1_img_right"
        android:text="查看全部订单"
        android:maxEms="8"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="13sp" />


</RelativeLayout>