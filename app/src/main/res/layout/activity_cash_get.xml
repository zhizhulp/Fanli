<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_account_recharge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ascba.rebate.activities.me_page.AccountRechargeWorkActivity">
    <com.ascba.rebate.view.MoneyBar
        app:needComplete="true"
        android:id="@+id/mb"
        app:textTitle="提现"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:background="@color/main_content_bg"
        android:id="@+id/when_no_card"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_14"
            android:text="您还没有银行卡，"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/main_text_blue"
            android:textSize="@dimen/main_text_14"
            android:text="绑定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/main_line_light_gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/when_has_card"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/main_content_bg"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/cash_get_go"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_go"/>
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/cash_get_go"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/main_text_normal"
                android:textSize="@dimen/main_text_15"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行"/>
            <TextView
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_15"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_bank_number"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡-尾号"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/main_bg"/>
    <LinearLayout
        android:background="@color/main_content_bg"
        android:gravity="center_vertical"
        android:paddingTop="7dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_14"
            android:text="提现金额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/main_text_gary"
            android:textSize="@dimen/main_text_14"
            android:id="@+id/tv_sevice_fee"
            android:layout_marginLeft="7dp"
            android:text="(免收服务费)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/main_content_bg"
        android:paddingBottom="7dp"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_14"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="¥"/>
        <com.ascba.rebate.view.EditTextWithCustomHint
            android:textColor="@color/main_text_normal"
            app:hintSize="@dimen/main_text_14"
            android:textColorHint="@color/main_text_gary"
            android:id="@+id/money"
            android:inputType="numberDecimal"
            android:hint="请输入提现金额"
            android:background="@null"
            android:layout_marginLeft="7dp"
            android:textSize="37sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        style="@style/viewStyleMargin"/>
    <RelativeLayout
        android:background="@color/main_content_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_space">
        <TextView
            android:textColor="@color/main_text_normal"
            android:textSize="@dimen/main_text_14"
            android:id="@+id/tv_left_money"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额 ¥ 0.00"/>
        <TextView
            android:onClick="getAll"
            android:gravity="center"
            android:textColor="@color/main_text_blue"
            android:textSize="@dimen/main_text_14"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="全部提现"/>
    </RelativeLayout>

    <View
        style="@style/viewStyleMatch"/>

    <Button
        android:onClick="goGetCash"
        android:text="提现"
        android:layout_marginTop="29dp"
        style="@style/btnNormal"/>
    <TextView
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温馨提示:当天24小时内到账"/>

</LinearLayout>
