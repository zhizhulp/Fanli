<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:minHeight="58dp"
    android:layout_width="match_parent"
    android:layout_height="58dp">
    <LinearLayout
        android:id="@+id/top"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RadioButton
            android:layout_marginLeft="15dp"
            android:paddingLeft="14dp"
            android:button="@drawable/pay_type_cb_bg"
            android:id="@+id/pay_type_cb"
            android:layout_width="wrap_content"
            android:layout_height="45dp" />
        <ImageView
            android:src="@mipmap/pay_left"
            android:id="@+id/pay_icon"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/pay_type_title"
                android:textColor="@color/shop_normal_text_color"
                android:textSize="14sp"
                android:text="账户余额支付"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pay_type_content"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="快捷支付"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_alignBottom="@id/top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_line"/>
</RelativeLayout>