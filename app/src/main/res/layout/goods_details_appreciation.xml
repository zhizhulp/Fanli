<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >

    <ImageView
        android:id="@+id/goods_details_appreciation_limg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:paddingTop="13dp"
        android:paddingBottom="13.5dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/appreciation" />

    <TextView
        android:id="@+id/goods_details_appreciation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/shop_normal_text_color"
        android:textSize="14sp"
        android:layout_toRightOf="@id/goods_details_appreciation_limg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/right_arrow" />

</RelativeLayout>