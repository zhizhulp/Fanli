<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="66dp"
    android:minHeight="66dp">
    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/time"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/activity_text_normal"
            android:id="@+id/wsaccount_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昨天"/>
        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            android:id="@+id/wsaccount_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21:14"/>
    </LinearLayout>
    <ImageView
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/time"
        android:id="@+id/wsaccount_category_icon"
        android:layout_marginLeft="27dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/wsaccount_category_icon"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/wsaccount_money"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="9dp"
            android:id="@+id/wsaccount_category_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_cash_get_status"
        android:textColor="@color/moneyBarColor"
        android:maxLines="1"
        android:layout_marginRight="15dp"
        android:paddingBottom="9dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
</RelativeLayout>