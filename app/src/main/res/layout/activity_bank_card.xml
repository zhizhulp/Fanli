<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_bank_card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ascba.rebate.activities.BankCardActivity">
    <com.ascba.rebate.view.MoneyBar
        app:textTitle="银行卡信息"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textColor="@color/black"
            android:text="姓名"/>
        <TextView
            android:id="@+id/bank_card_name"
            android:gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        style="@style/viewStyleMatch"/>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="卡号"/>
        <TextView
            android:id="@+id/bank_card_number"
            android:gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        style="@style/viewStyleMatch"/>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="类型"/>
        <TextView
            android:id="@+id/bank_card_type"
            android:gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        style="@style/viewStyleMatch"/>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="手机号"/>
        <com.ascba.rebate.view.EditTextWithCustomHint
            android:id="@+id/ed_bank_card_phone"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请填写银行卡预留手机号"/>
    </RelativeLayout>
    <View
        style="@style/viewStyleMatch"/>
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="46dp">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="验证码"/>
        <com.ascba.rebate.view.EditTextWithCustomHint
            android:id="@+id/ed_bank_card_code"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:hint="请输入验证码"/>
        <TextView
            android:onClick="sendMsg"
            android:gravity="center"
            android:id="@+id/tv_send"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/moneyBarColor"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="发送"/>
        <View
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/tv_send"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/view_line"/>
    </RelativeLayout>
    <View
        style="@style/viewStyleMatch"/>
    <Button
        android:onClick="bankCardConfirm"
        android:layout_marginTop="30dp"
        android:text="提交"
        style="@style/btnNormal" />
</LinearLayout>
