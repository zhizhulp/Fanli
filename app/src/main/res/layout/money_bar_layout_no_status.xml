<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/money_bar_parent"
    android:layout_width="match_parent"
    android:background="@color/moneyBarColor"
    android:layout_height="48dp">
    <ImageView
        android:paddingLeft="15dp"
        android:paddingRight="55dp"
        android:layout_centerVertical="true"
        android:id="@+id/money_bar_back"
        android:scaleType="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/money_bar_back"/>
    <TextView
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/money_bar_title"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_search"
        android:id="@+id/money_bar_tail_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/money_bar_ok"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        android:textColor="@color/white"/>
</RelativeLayout>