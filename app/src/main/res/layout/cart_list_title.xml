<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="61dp"
    android:layout_height="61dp">
    <View
        android:id="@+id/view_line_top"
        android:background="@color/view_line_new"
        android:layout_width="match_parent"
        android:layout_height="9dp"/>
    <FrameLayout
        android:layout_below="@id/view_line_top"
        android:id="@+id/parent_title"
        android:layout_centerVertical="true"
        android:paddingLeft="14dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <CheckBox
            android:id="@+id/cart_cb_title"
            android:maxLines="1"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:textColor="@color/shop_normal_text_color"
            android:text="RCC韩国代购-男装"
            android:textStyle="bold"
            android:button="@drawable/cart_cb_bg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:visibility="gone"
            android:textSize="12sp"
            android:background="@color/gray"
            android:layout_gravity="center_vertical"
            android:text="失效"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center_vertical|right"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/red_bg"
            android:gravity="center"
            android:textColor="@color/shop_red_text_color"
            android:text="进店"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <View
        android:layout_alignBottom="@id/parent_title"
        style="@style/viewStyleMatch"/>
</RelativeLayout>