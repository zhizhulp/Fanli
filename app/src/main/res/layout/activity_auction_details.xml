<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lat_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <!--倒计时-->
        <TextView
            android:id="@+id/tv_time_down_over"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:background="#FF7C82"
            android:gravity="center"
            android:text="0时 0分 0秒 后结束"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />
        <!--未开始 未交保证金-->

        <!--已开始 未交保证金-->
        <RelativeLayout
            android:id="@+id/lat_going_noSureMoney"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#585858"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_apply_sure_money"
                android:layout_width="129dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#F63C3C"
                android:gravity="center"
                android:text="交保证金报名"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/tv_apply_sure_money"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sure_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保证金￥20000"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="（未拍到全额退还）"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>
        </RelativeLayout>
        <!--已开始 已交保证金（抢拍）-->
        <RelativeLayout
            android:id="@+id/lat_going_SureMoney_rush"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/btn_pay_apply_rush"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#F63C3C"
                android:gravity="center"
                android:text="拍"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tv_price_rush"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_toLeftOf="@id/btn_pay_apply_rush"
                android:background="#585858"
                android:gravity="center"
                android:text="当前价：￥0.00"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>
        <!--已开始 已交保证金（盲拍）-->
        <RelativeLayout
            android:id="@+id/lat_going_SureMoney_blind"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#585858"
            android:visibility="gone">

            <TextView
                android:id="@+id/btn_pay_apply_blind"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#F63C3C"
                android:gravity="center"
                android:text="拍"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/btn_pay_apply_blind"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/gray_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pay_btn_down"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:text="—"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/pay_view_down"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/pay_btn_down"
                        android:background="@color/textgray" />

                    <TextView
                        android:id="@+id/pay_btn_up"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="十"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/pay_view_up"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/pay_btn_up"
                        android:background="@color/textgray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/pay_view_up"
                        android:layout_toRightOf="@id/pay_btn_down"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dp"
                            android:gravity="center"
                            android:text="降价至"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_price_blind"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:text="￥599.00"
                            android:textColor="@color/shop_red_text_color"
                            android:textSize="13sp" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <!--结束 获拍--><!--结束 未获拍-->
        <TextView
            android:id="@+id/tv_over_auction_state"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:background="#585858"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="拍卖已结束(已获拍)"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:visibility="gone" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lat_bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--商品图片轮播-->
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager_img"
                    android:layout_width="match_parent"
                    android:layout_height="312dp" />
                <!--返回按钮-->
                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="35dp"
                    android:paddingTop="15dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/abar_back" />
                <!--竞拍状态-->
                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_gravity="bottom|left">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#EB6060" />
                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="疯狂降价中"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </FrameLayout>
            </FrameLayout>
            <include layout="@layout/goods_details_cuttingline_wide" />
            <!--商品名-->
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="5dp"
                android:text="丝檀木手串金丝楠木沉香乌木阴沉木108佛珠男女式情侣手链"
                android:textColor="@color/shop_normal_text_color"
                android:textSize="14sp" />

            <!--价格-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="11dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前价格："
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="￥"
                    android:textColor="@color/fragment_money_red"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/fragment_money_red"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_orignal_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:text="原价：￥0"
                    android:textColor="@color/main_text_gary"
                    android:textSize="14sp" />

            </LinearLayout>

            <!--距离下次降价-->
            <LinearLayout
                android:id="@+id/lat_reduce_time_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="11dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="距离下次降价："
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_time_down"
                    android:layout_width="47dp"
                    android:layout_height="17dp"
                    android:background="#fff1c7"
                    android:gravity="center"
                    android:text="0s"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="12sp" />
            </LinearLayout>

            <!--增值积分-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="11dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动赠送礼品分："
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="12sp" />

            </LinearLayout>

            <!--抢拍人数、围观、规则-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="11dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_auction_person_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="竞拍：0人"
                    android:textColor="@color/main_text_gary"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="28dp"
                    android:background="@color/main_text_gary" />

                <TextView
                    android:id="@+id/tv_other_person_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="围观：0人"
                    android:textColor="@color/main_text_gary"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="16dp"
                android:background="@color/main_line_light_gray" />

            <!--起拍价、延迟周期-->
            <FrameLayout
                android:id="@+id/lat_some_params"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_start_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起拍价：￥0"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_gap_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="降价幅度：0/h"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="190dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_gap_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="延时周期：0分钟/次"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_reduce_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="降价次数：0次"
                        android:textSize="12sp" />
                </LinearLayout>


            </FrameLayout>

            <include layout="@layout/goods_details_cuttingline_wide" />

            <!--拍卖流程-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="17dp"
                android:text="拍卖流程"
                android:textColor="@color/shop_normal_text_color"
                android:textSize="14sp" />

            <!--1>2>3>4>5-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:background="@drawable/bg_process"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#E48222"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_process" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:background="@drawable/bg_process"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#E48222"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_process" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:background="@drawable/bg_process"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#E48222"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_process" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:background="@drawable/bg_process"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="#E48222"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/icon_process" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="6dp"
                        android:background="@drawable/bg_process"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="#E48222"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="交保证金"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="出价竞拍"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="竞拍成功"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="支付货款"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="交易成功"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="19dp"
                android:background="@color/main_bg" />

            <!--保证金规则-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="17dp"
                android:text="保证金规则"
                android:textColor="@color/shop_normal_text_color"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="19dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_rules1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/duihao"
                    android:drawablePadding="6dp"
                    android:text="未拍到全额退还"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/text_rules1"
                    android:drawableLeft="@mipmap/duihao"
                    android:drawablePadding="6dp"
                    android:text="拍品不退不换"
                    android:textColor="@color/shop_normal_text_color"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="11dp"
                    android:src="@mipmap/right_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/goods_details_cuttingline_view"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/main_bg" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="拍品信息"
                android:textColor="@color/shop_normal_text_color"
                android:textSize="@dimen/main_text_14"
                android:visibility="gone" />

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/main_text_gary"
                android:textSize="@dimen/main_text_14"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>