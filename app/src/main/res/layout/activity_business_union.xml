<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:background="@mipmap/me_head_bg">

                <com.ascba.rebate.view.MoneyBar
                    app:backImg="@mipmap/abar_back_white"
                    app:titleColor="@color/white"
                    android:id="@+id/moneyBar"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    app:barBg="@color/transparent"
                    app:textTitle="商家联盟" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="36dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/business_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="13dp"
                            android:drawableTop="@mipmap/business_union_code"
                            android:text="我要收款"
                            android:textColor="@color/white"
                            android:textSize="@dimen/main_text_14"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/business_account"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="13dp"
                            android:drawableTop="@mipmap/business_union_account"
                            android:text="流水记录"
                            android:textColor="@color/white"
                            android:textSize="@dimen/main_text_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/business_data"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="13dp"
                            android:drawableTop="@mipmap/business_union_data"
                            android:text="商家资料"
                            android:textColor="@color/white"
                            android:textSize="@dimen/main_text_14"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_total_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/fragment_money_red"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="累计交易金额"
                        android:textColor="@color/main_text_normal"
                        android:textSize="@dimen/main_text_12" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="11dp"
                    android:background="@color/main_line_light_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_total_extra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/fragment_money_red"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="累计礼品分"
                        android:textColor="@color/main_text_normal"
                        android:textSize="@dimen/main_text_12" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="11dp"
                    android:background="@color/main_line_light_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_trade_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/fragment_money_red"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="累计交易次数"
                        android:textColor="@color/main_text_normal"
                        android:textSize="@dimen/main_text_12" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/main_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14.5dp"
                        android:src="@mipmap/ic_jr_jy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="13dp"
                        android:text="今日交易金额"
                        android:textColor="@color/main_text_normal"
                        android:textSize="@dimen/main_text_13" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_cash_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="0.00"
                    android:textColor="@color/main_text_normal"
                    android:textSize="@dimen/main_text_23" />

            </LinearLayout>

            <include layout="@layout/goods_details_cuttingline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14.5dp"
                        android:src="@mipmap/ic_jr_zz" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="13dp"
                        android:text="今日礼品分"
                        android:textColor="@color/main_text_normal"
                        android:textSize="@dimen/main_text_13" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_extra_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="0"
                    android:textColor="@color/main_text_normal"
                    android:textSize="@dimen/main_text_23" />

            </LinearLayout>

            <include layout="@layout/goods_details_cuttingline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14.5dp"
                        android:src="@mipmap/ic_jr_jyn" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="13dp"
                        android:text="今日交易次数"
                        android:textColor="@color/shop_normal_text_color"
                        android:textSize="@dimen/main_text_13" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_trade_count_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="0"
                    android:textColor="@color/main_text_normal"
                    android:textSize="@dimen/main_text_23" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>