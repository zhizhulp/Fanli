<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    android:background="@color/main_content_bg"
    android:id="@+id/myallorders_item">


    <ImageView
        android:id="@+id/myallorders_icon"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:id="@+id/myallorders_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/myallorders_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myallorders_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="-38.00"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/myallorders_category_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:ellipsize="end"
            android:maxEms="8"
            android:textSize="10sp"
            android:singleLine="true"
            android:textColor="@color/textgray"
            android:text="2017-07-04 08:32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"
        android:gravity="center"

        android:orientation="vertical">

        <TextView

            android:gravity="right"
            android:id="@+id/myallorders_pay_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现金付款"
            android:textSize="13sp" />
        <TextView
            android:gravity="right"
            android:id="@+id/await_sure_order"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待商家确认"
            android:textColor="@color/sure_orange"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_bg"/>
